{{#block "vendor_js"}}
<script type="text/javascript" src="/js/single/media-audio.js"></script>
{{> pagination }}

<!--上传音频modal模板-->
<script type="text/html" id='audio-upload-tpl'>
  <div class="modal fade" id="audio-upload" tabindex="-1" role="dialog" aria-labelledby="audioUploadLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
      <div class="modal-header">
        
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times;</button>
        <h4 class="modal-title" id="audioUploadLabel">添加音频素材</h4>
      </div>
      <form id='audio-upload-form'>
        <div class="modal-body">
          <div class="form-group">
            <label>音频选择</label>
            <input type="file" name='file' accept='audio/*' style='width: 100%;' required>
          </div>
          <div class="form-group">
            <label>音频试听</label>
            <div>
              <audio id='audio-preview' src="" style='width: 100%;' controls></audio>
            </div>
          </div>
          <div class="form-group">
            <label>音频名称</label>
            <input type="text" name='title' placeholder="请输入音频名称" class="form-control", required>
          </div>
          <div class="form-group">
            <label>音频简介</label>
            <textarea type="text" name='description' placeholder="请输入音频简介" class="form-control", required, style='width:100%; height: 100px; resize: none;'></textarea>
          </div>
          <div class="form-group">
            <label>音频标签</label>
            <a href="javascript:;" class='create-tag-btn'>创建标签</a>
            <input name="tags" class="tag-select" style="width: 100%">
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success" name='submitUploadBtn'>添加</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
      </form>
    </div>
  </div>
</script>
<!--修改音频modal模板-->
<script type="text/html" id='audio-modify-tpl'>
  <div class="modal fade" id="audio-modify" tabindex="-1" role="dialog" aria-labelledby="audioModifyLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times;</button>
        <h4 class="modal-title" id="audioModifyLabel">修改音频素材</h4>
      </div>
      <form>
        <div class="modal-body">
          <div class="form-group">
            <label>音频名称</label>
            <input type="text" name='title' placeholder="请输入音频名称" class="form-control", required>
          </div>
          <div class="form-group">
            <label>音频简介</label>
            <textarea type="text" name='description' placeholder="请输入音频简介" class="form-control", required, style='width:100%; height: 100px; resize: none;'></textarea>
          </div>
          <div class="form-group">
            <label>音频标签</label>
            <a href="javascript:;" class='create-tag-btn'>创建标签</a>
            <input name="tags" class="tag-select" style="width: 100%">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-warning" name='submitModifyBtn'>修改</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
      </form>
    </div>
  </div>
</script>
{{/block}}

<div class="content-heading">
  <div class="pull-right">
    <button type="button" class='btn btn-green btn-sm pull-right' name='uploadAudioBtn'>添加音频素材</button>
    <div id='audio-container' class='pull-right mr' style='width:300px;'>
      <audio id='audio-player' src="" style='width: 100%;' controls autoplay></audio>
    </div>
  </div>
  <ol class="breadcrumb">
    <li>素材库
    </li>
    <li class="active">音频素材
    </li>
  </ol>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="input-group">
          <span class="input-group-input">
            <input name="searchTags" class="tag-select" placeholder="输入素材标签" value="{{_QUERY_.tags}}">
          </span>
          <span class="input-group-btn">
            <button class="btn btn-default" type="button" name="filterBtn">筛选</button>
          </span>
        </div>
      </div>
      <div class="panel-body pt0">
        {{#unless _DATA_.media}}
        <div class="text-muted text-center">当前没有音频素材</div>
        {{else}}
        <table class='table tabel-striped table-hover'>
          <thead>
          <tr>
            <th class="text-left">标题</th>
            <!--<th class="text-center">长度</th>-->
            <th class="text-center">标签</th>
            <th class="text-right">操作</th>
          </tr>
          </thead>
          <tbody>
            {{#each _DATA_.media}}
            <tr data-id="{{{_id}}}">
              <td>
                <button class='btn btn-primary btn-xs mr audio-play-btn' data-audio-src='{{{url}}}' style='width: 23px; height: 23px;'>
                  <em class='fa fa-play'></em>
                </button>
                <span title='{{desc}}' name='title'>{{title}}</span>
              </td>
              <!--<td class="text-center">1:15</td>-->
              <td class="text-center" data-tags='{{join tags ";"}}'>
                {{#each tags}}
                <span class='label label-purple' style='font-size: 12px;'>{{this}}</span>
                {{/each}}
              </td>
              <td class="text-right">
                <a href='javascript:;' name='modifyAudioBtn' class='btn btn-link btn-xs'>修改</a>
                <a href='javascript:;' name='deleteAudioBtn' class='btn btn-link btn-xs'>删除</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="row pt-lg">
          <div class="col-md-12 text-center pagination-sm" id='pagination-container'></div>
          <div class="col-md-12 text-center">
            <small class="text-muted">检索到{{_DATA_.total}}条，共{{_DATA_.pageCnt}}页</small>
          </div>
        </div>
        {{/unless}}
      </div>
    </div>
  </div>
</div>
