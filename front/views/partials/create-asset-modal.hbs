<script type="text/html" id='create-tpl'>
  <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="createLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="loader" style="display: none;">
        <div class="whirl traditional"></div>
      </div>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times;</button>
          <h4 class="modal-title" id="createLabel">上传素材</h4>
        </div>
        <form id='asset-form'>
          <div class="modal-body">
            <div class="form-group">
              <label>素材名称</label>
              <input type="text" name='name' placeholder="请输入素材名称" class="form-control" required>
            </div>
            <div class="form-group">
              <label>素材文件</label>
              <div class="input-group">
                <span type="text" class="form-control" name="uploadFilePath"></span>
                <span class="input-group-btn">
                  <button type="button" class="btn btn-default" id="asset-upload-btn">选择文件</button>
                </span>
              </div>
            </div>
          </div>
            
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" name='submitBtn'>提交</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</script>