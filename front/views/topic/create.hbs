{{#block "vendor_js"}}
<link rel="stylesheet" type="text/css" href="/vendor/wangEditor/dist/css/wangEditor.min.css">
{{/block}}

{{#block "vendor_js"}}
<script src="/vendor/wangEditor/dist/js/wangEditor.min.js"></script>
{{/block}}

<div class="content-heading">
  <div class="pull-right">
    <button type="button" class="btn btn-sm btn-primary" name="submitBtn">提交知识点信息</button>
  </div>
  <ol class="breadcrumb">
    <li>
      <span>管理</span>
    </li>
    <li>
      <a href="/topic">知识点管理</a>
    </li>
    <li class="active">
      <span>新增知识点</span>
    </li>
  </ol>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default" id='edit-panel' data-js-comp="component/topic/create">
      <form id='article-form'>
        <div class="panel-body">
          <div class="form-group">
            <label>名称</label>
            <input type="text" name='name' placeholder="请输入名称" class="form-control", required>
          </div>
          <div class="form-group">
            <label>内容</label>
            <div id="content-editor" style="width:100%; height: 300px;"></div>
          </div>
          <div class="form-group">
            <label>作者</label>
            <input type="text" name='authorId' placeholder="请输入作者" class="form-control", required>
          </div>
          <div class="form-group">
            <label>课程</label>
            <input type="text" name='courseId' placeholder="请输入课程" class="form-control", required>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default" id='media-panel'>
      <div class="panel-body">
        <div>
          <ul class="nav nav-tabs">
            <li name='images' class="active"><a href="javascript:;">图片</a></li>
            <li name='audio'><a href="javascript:;">音频</a></li>
          </ul>
          <div class="tab-content"  data-auto-height='30'>
            <div role="tabpanel" class="tab-pane active" id="pictures">
              <div class="media-list">
                
              </div>
              <div class="col-md-12 text-center pt-lg" id='pagination-container'></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

